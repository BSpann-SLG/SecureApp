{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "aseName": {
            "type": "string",            
            "metadata": {
              "description": "The name of the App Service Environment to use for hosting the web app."
            }
        },
        "vnetname": {
            "type": "string",            
            "metadata": {
              "description": "VNet Name."
            }
        },
        "outboundSubnetName":{
            "type": "string",            
            "metadata": {
              "description": "Outbound Subnet Name."
            }
        },
         "appServicePlanName": {
            "type": "string",            
            "metadata": {
              "description": "The name of the App Service plan to use for hosting the web app."
            }
        },
        "appServicePlanSKU": {
          "type": "string",
          "allowedValues": [           
            "I1V2",
            "I2V2",
            "I3V2"
          ],
          "defaultValue": "I1V2",
          "metadata": {
            "description": "The pricing tier for the ASP (hosting plan)."
          }
        },
        "appServicePlanCapacity": {
            "type": "int",
            "defaultValue": 1,
            "metadata": {
              "description": "Capacity."
            }
        },
        "webAppName": {
            "type": "string"
        }
    },     
    "variables": {        
        "vnetid": "[resourceId('Microsoft.Network/virtualNetworks',parameters('vnetname'))]"
    },
    "resources" : [
         {
            "type": "Microsoft.Web/hostingEnvironments",
            "apiVersion": "2018-02-01",
            "name": "[parameters('asename')]",
            "location": "[resourceGroup().location]", 
            "kind": "ASEV3",
            "properties": {
                "name": "[parameters('asename')]",
                "location": "[resourceGroup().location]",                  
                "vnetSubnetName": "[parameters('outboundSubnetName')]",
                "virtualNetwork": {
                    "id": "[variables('vnetid')]",
                    "subnet": "[parameters('outboundSubnetName')]"
                },
                "internalLoadBalancingMode": "Web, Publishing",                
                "ipsslAddressCount": 0,
                "dnsSuffix": "[concat(parameters('asename'), '.appserviceenvironment.net')]",                                
                "workerPools": []
            }
        },
        {
            "comments": "App Service Plan",
            "apiVersion": "2019-08-01",
            "name": "[parameters('appServicePlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location":  "[resourceGroup().location]",
             "dependsOn": [
                "[resourceId('Microsoft.Web/hostingEnvironments', parameters('asename'))]"
            ],               
            "properties": {
                "hostingEnvironmentProfile": {
                  "id": "string"
                }
            },
            "sku": {
                "name": "[concat(parameters('appServicePlanSKU'))]",         
                "capacity": "[parameters('appServicePlanCapacity')]"
            }
        },
        {
            "comments": "Web Application",
            "apiVersion": "2020-06-01",    
            "type": "Microsoft.Web/sites",
            "name": "[parameters('webAppName')]",
            "location": "[resourceGroup().location]",       
            "dependsOn": [          
                "[concat('Microsoft.Web/serverFarms/',parameters('appServicePlanName'))]"                         
            ],
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
            "name": "[parameters('webAppName')]",
            "serverFarmId": "[resourceId('Microsoft.Web/serverFarms',parameters('appServicePlanName'))]",
            "siteConfig": {
                        "appSettings": [
                            {
                                "name": "WEBSITE_VNET_ROUTE_ALL",
                                "value": 1
                            },
                            {
                                "name": "WEBSITE_DNS_SERVER",
                                "value": "168.63.129.16"
                            }
                        ]
            }            
            }            
        }
    ]
}