{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "routetablename": {
            "type": "string",
            "metadata": {
                "description": "UDR name"
            }
        },
        "targetNicId": {
            "type": "string"           
        },       
        "azfwName": {
            "type": "string"
        },
         "nexthoptype": {
            "type": "string",
            "defaultValue" : "VirtualAppliance"
        }
    },    
    "resources": [
        {
            "name": "[parameters('routetablename')]",
            "type": "Microsoft.Network/routeTables",
            "apiVersion": "2020-06-01",
            "location": "[resourceGroup().location]",            
            "properties": {
                "routes": [
                    {
                    "id": "string",
                    "properties": {
                        "addressPrefix": "[concat(reference(resourceId('Microsoft.Network/networkinterfaces',parameters('targetNicId'))).ipconfigurations[0].privateipaddress,'/32')]",
                        "nextHopType": "[parameters('nexthoptype')]",
                        "nextHopIpAddress":  "[reference(resourceId('Microsoft.Network/azureFirewalls',parameters('azfwName'))).ipconfigurations[0].privateipaddress]"
                    },
                    "name": "string"
                    }
                ] 
            }          
        }
    ]
}